{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "importHelpers": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noStrictGenericChecks":  true,
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "types": [
    "core-js"
  ],
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
